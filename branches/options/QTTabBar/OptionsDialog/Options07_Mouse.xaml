<qt:OptionsDialogTab
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:qt="clr-namespace:QTTabBarLib"
    x:Class="QTTabBarLib.Options07_Mouse"
    x:ClassModifier="internal"
    DataContext="{Binding Path=WorkingConfig.mouse, RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="OptionsDialogResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel
        LastChildFill="True"
        Margin="14,5,10,16">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="0,0,0,4"
            Orientation="Horizontal">
            <Image
                Source="{Binding Source={x:Static qt:Resources_Image.imgTabMouse}, Converter={StaticResource BitmapToImageSourceConverter}}"
                Style="{StaticResource PageHeaderImageStyle}"/>
            <Label
                Content="Assign commands to different mouse actions"
                FontSize="13"
                VerticalAlignment="Bottom"/>
        </StackPanel>
        <StackPanel
            DockPanel.Dock="Bottom"
            Margin="0,10,0,0"
            Orientation="Vertical">
            <Label
                Content="Other mouse options"
                Style="{StaticResource SectionHeaderStyle}"/>
            <CheckBox
                Content="Mouse wheel scrolls the window under the mouse"
                Margin="13,0,1,0"/>
        </StackPanel>
        <TextBlock 
            Text="To add a mouse binding, perform a mouse action on the plus icon to the left of the appropriate target type.  To remove a binding, select it in the list and press the Delete key."
            TextWrapping="Wrap"
            DockPanel.Dock="Top"
            Margin="5,10,5,15"/>
        <qt:RestrictDesiredSize MinHeight="200">
            <ListView x:Name="lvwMouseBindings"
                BorderThickness="1.000001"
                KeyDown="lvwMouseBindings_KeyDown"
                SelectionMode="Single">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="IsSelected" Value="{Binding Path=IsSelected, Mode=TwoWay}"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Height" Value="20"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="True">
                                    <Grid
                                        DockPanel.Dock="Left"
                                        Margin="4,1">
                                        <Rectangle x:Name="rctAddMouseAction"
                                            MouseDown="rctAddMouseAction_MouseDown"
                                            Fill="LightGray"
                                            Stroke="Gray"
                                            StrokeThickness="1"
                                            Height="16"
                                            Width="16"
                                            Tag="{Binding Path=Name}"/>
                                        <TextBlock
                                            MouseDown="rctAddMouseAction_MouseDown"
                                            Tag="{Binding Path=Name}"
                                            Text="+"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"/>
                                    </Grid>
                                    <TextBlock 
                                        DockPanel.Dock="Left"
                                        Foreground="MediumBlue"
                                        Margin="2, 1, 4, 4"
                                        Text="{Binding Path=Name}"/>
                                    <Border
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        Height="1"
                                        Margin="0,0,10,0"
                                        SnapsToDevicePixels="True"/>
                                </DockPanel>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Mouse Chord" Width="235">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Foreground="#FF000000"
                                        Text="{Binding Path=GestureText}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Action" Width="235">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch">
                                        <TextBlock x:Name="txtMouseAction"
                                            Foreground="#FF000000"
                                            Padding="4,0,0,0"
                                            Text="{Binding Path=ActionText}"
                                            TextAlignment="Left"/>
                                        <ComboBox x:Name="cmbInlineMouseAction"
                                            DisplayMemberPath="Value"
                                            Height="22"
                                            HorizontalAlignment="Stretch"
                                            ItemsSource="{Binding Path=ComboBoxItems}"
                                            IsDropDownOpen="{Binding Path=IsEditing, Mode=TwoWay}"
                                            Margin="0,-3"
                                            SelectedValue="{Binding Path=Action, Mode=TwoWay}"
                                            SelectedValuePath="Key"
                                            Visibility="Collapsed"/>
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsEditing}" Value="True">
                                            <Setter 
                                                TargetName="cmbInlineMouseAction" 
                                                Property="Visibility"
                                                Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=txtMouseAction, Path=IsMouseOver}" Value="True">
                                            <Setter 
                                                TargetName="cmbInlineMouseAction" 
                                                Property="Visibility"
                                                Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=cmbInlineMouseAction, Path=IsMouseOver}" Value="True">
                                            <Setter 
                                                TargetName="cmbInlineMouseAction" 
                                                Property="Visibility"
                                                Value="Visible"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </qt:RestrictDesiredSize>
    </DockPanel>
</qt:OptionsDialogTab>
